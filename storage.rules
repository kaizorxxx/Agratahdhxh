
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Aturan untuk Avatar User
    // Publik bisa melihat gambar, tapi hanya pemilik akun yang bisa upload/hapus
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
